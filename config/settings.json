{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] PostToolUse hook triggered\" >> /tmp/claude-hook-any.log"
          },
          {
            "type": "command",
            "command": "jq -r 'select(.tool_input.file_path) | .tool_input.file_path' | xargs -I {} claude/hooks/code-quality-validator-simple.sh {}"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claude/hooks/post-write.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] Stop hook triggered\" >> /tmp/claude-hook-stop.log"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r 'select(.tool_input.file_path) | .tool_input.file_path' | xargs -I {} claude/hooks/code-quality-validator-simple.sh {}"
          },
          {
            "type": "command",
            "command": "claude/hooks/code-quality-primer.sh"
          },
          {
            "type": "command",
            "command": "claude/hooks/code-similarity-check.sh"
          },
          {
            "type": "command",
            "command": "claude/hooks/claude-context-updater.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude/hooks/check-package-age.sh"
          },
          {
            "type": "command",
            "command": "echo \"$(<&0)\" | jq -r 'select(.tool_input.command | test(\"^git\\\\s+commit\")) | \"Running pre-commit checks...\"' &&\n  claude/hooks/pre-commit-check.sh"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(<&0)\" | jq -r 'select(.tool_input | tostring | test(\"\\\"status\\\":\\\\s*\\\"completed\\\"\")) | \"Running quality \n  checks...\"' && claude/hooks/pre-completion-check.sh"
          }
        ]
      }
    ]
  }
}