{
  "_comment": "Claude Code hooks configuration (using claude-code-hooks-cli)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "pattern": "^(npm\\s+(install|i)|yarn\\s+add)\\s+",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec check-package-age"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec code-quality-primer"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec pre-commit-check --exclude='node_modules,dist,build,.next,coverage'"
          },
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec pre-typescript-check --exclude='node_modules,dist,build,.next,coverage'"
          }
        ],
        "matcher": "Bash",
        "pattern": "^git\\s+commit"
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec pre-completion-quality-check --exclude='node_modules,dist,build,.next,coverage'"
          }
        ],
        "matcher": "TodoWrite|Bash"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec code-quality-validator"
          },
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec claude-context-updater"
          },
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec code-similarity-check"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec task-completion-notify"
          }
        ],
        "matcher": "TodoWrite"
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec post-write"
          }
        ],
        "matcher": "Write"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-hooks-cli exec stop-validation --exclude='node_modules,dist,build,.next,coverage'"
          }
        ]
      }
    ]
  }
}