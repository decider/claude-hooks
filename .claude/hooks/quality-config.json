{
  "rules": {
    "maxFunctionLines": 30,
    "maxFileLines": 200,
    "maxLineLength": 140,
    "maxNestingDepth": 5,
    "commentRatioThreshold": 10
  },
  "ignore": {
    "paths": [
      "node_modules/**",
      "lib/**",
      "dist/**",
      "build/**",
      "coverage/**",
      ".git/**"
    ],
    "files": [
      "*.d.ts",
      "*.min.js",
      "*.map",
      "*-lock.json",
      "*.lock"
    ]
  }
}