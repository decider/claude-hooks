{
  "fileTypes": {
    "*.ts": ["docs/typescript-standards.md"],
    "*.tsx": ["docs/typescript-standards.md"]
  },
  "directories": {
    "tests/": ["docs/testing-standards.md"],
    "testing/": ["docs/testing-standards.md"]
  },
  "thresholds": {
    "default": 0.8
  },
  "evaluations": {
    "codeQuality": {
      "enabled": true,
      "fileTypes": ["*.ts", "*.tsx"],
      "rules": {
        "maxFunctionLines": 20,
        "maxFileLines": 100,
        "maxNestingDepth": 3,
        "maxParameters": 3
      }
    }
  }
}